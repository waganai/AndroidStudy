<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview1_simple_item_decoration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_simple_recyclerview_layout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview2_simple_item_decoration"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        tools:listitem="@layout/item_simple_recyclerview_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview1_simple_item_decoration" />

</androidx.constraintlayout.widget.ConstraintLayout>