<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_page_demo"
        android:layout_width="wrap_content"
        android:text="Page Demo"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedWidth="true"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_view_demo"
        android:layout_width="wrap_content"
        android:text="View Demo"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_page_demo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedWidth="true"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_thirdparty_demo"
        android:layout_width="wrap_content"
        android:text="ThirdParty Demo"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_view_demo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedWidth="true"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_thread_demo"
        android:layout_width="wrap_content"
        android:text="Thread Demo"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_thirdparty_demo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedWidth="true"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_process_demo"
        android:layout_width="wrap_content"
        android:text="Process Demo"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_thread_demo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedWidth="true"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_test_demo"
        android:layout_width="wrap_content"
        android:text="Test Demo"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_process_demo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedWidth="true"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>