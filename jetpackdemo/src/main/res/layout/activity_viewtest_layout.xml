<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.jetpackdemeo.view.CustomMarkView
        android:id="@+id/mv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:text="Java"
        app:textSize="12"
        android:layout_margin="10dp"
        app:textColor="@android:color/holo_green_light"
        app:backgroundColor="@android:color/holo_orange_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.jetpackdemeo.view.CustomMarkView
        android:id="@+id/mv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:text="Kotlin"
        app:textSize="16"
        android:layout_margin="10dp"
        app:textColor="@android:color/holo_red_light"
        app:backgroundColor="@android:color/holo_blue_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mv_1" />

    <com.example.jetpackdemeo.view.CustomMarkView
        android:id="@+id/mv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:text="Android"
        app:textSize="24"
        android:layout_margin="10dp"
        app:textColor="@android:color/white"
        app:backgroundColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mv_2" />

</androidx.constraintlayout.widget.ConstraintLayout>