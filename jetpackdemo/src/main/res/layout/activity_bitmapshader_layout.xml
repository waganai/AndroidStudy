<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.jetpackdemeo.view.RounderCornerImageView
            android:id="@+id/rv_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.jetpackdemeo.view.roundviews.RoundImageView
            android:id="@+id/rv_2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            android:background="@mipmap/yileina"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_1" />

        <com.example.jetpackdemeo.view.roundviews.RoundImageView2
            android:id="@+id/rv_3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:background="@mipmap/yileina"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_2" />

        <com.example.jetpackdemeo.view.roundviews.RoundRelativeLayout1
            android:id="@+id/rl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_3">

            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/yileina" />

            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/iv_1"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/yileina" />

        </com.example.jetpackdemeo.view.roundviews.RoundRelativeLayout1>

        <com.example.jetpackdemeo.view.roundviews.RoundLinearLayout1
            app:layout_constraintTop_toBottomOf="@id/rl_1"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:background="@color/purple_700"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@mipmap/yileina" />

            <ImageView
                android:id="@+id/iv_4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@mipmap/yileina" />

        </com.example.jetpackdemeo.view.roundviews.RoundLinearLayout1>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>