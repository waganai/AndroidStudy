<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="670dp">

    <ImageView
        android:id="@+id/iv_content1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_content2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_content1" />

    <ImageView
        android:id="@+id/iv_content3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_content2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_content1"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_content1"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="伊蕾娜"
            android:textSize="24dp"
            android:layout_margin="10dp"
            android:textColor="#FF0000"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_content2"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_content1"
            app:layout_constraintStart_toStartOf="parent"
            android:text="沙耶"
            android:textSize="24dp"
            android:layout_margin="10dp"
            android:textColor="#FF0000"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>