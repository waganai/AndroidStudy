<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_sync1"
        android:text="Synchronized 修饰类"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_sync2"
        android:text="Synchronized 修饰对象"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_sync1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_sync3"
        android:text="Synchronized 修饰方法"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_sync2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_sync4"
        android:text="Synchronized 修饰成员变量"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_sync3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_sync5"
        android:text="Synchronized 修饰静态对象"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_sync4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_sync6"
        android:text="Synchronized 修饰同一对象"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_sync5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_threadpool"
        android:text="自定义线程池"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_sync6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>